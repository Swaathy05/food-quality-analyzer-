# Production Environment Configuration

# Application Settings
APP_NAME=Food Quality Analyzer Pro
APP_VERSION=2.0.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secure-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/food_analyzer_prod
REDIS_URL=redis://localhost:6379/0

# API Keys
GROQ_API_KEY=your-groq-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng
OCR_CONFIG=--oem 3 --psm 6

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.png,.jpg,.jpeg,.webp
UPLOAD_FOLDER=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# External APIs
NUTRITION_API_KEY=your-nutrition-api-key
FDA_API_KEY=your-fda-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=food-analyzer-uploads
AWS_REGION=us-east-1

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem